<?xml version="1.0"?>
<all>
  <!-- IMPORTANT - WHEN SPECIFYING COLUMN INDICES, ASSUME THE FIRST COLUMN IS INDEX 1, NOT 0 -->
  <csv_file> CSVData/San_Lorenzo/SanLorenzo_Sherman_met_drivers_2008-2017_unix.csv </csv_file>
  <input_time_resolution> 1800 </input_time_resolution> <!-- seconds -->
  <output_time_resolution> 3600 </output_time_resolution> <!-- integer multiples of 3600, evenly divisible into 24 hours -->
  <n_header_row> 1 </n_header_row>
  <n_fields> 17 </n_fields>
  <date_format> Y-M-D </date_format>
  <time_format> H:M:S </time_format>
  <nodata_flags> NA </nodata_flags>
  <grid_name_out> NCOut/sherman_1hr_0.1x0.1_met.v3/CLM1PT_data/ </grid_name_out>
  <fill_value_out> 1.e+36f </fill_value_out>
  <missing_value_out> 1.e+36f </missing_value_out>
  <acknowledgements> The original raw meteorological data were obtained from the publicly accessible data archive of the Smithsonian Institution and were collected at Fort Sherman, Panama, under the Physical Monitoring Program of the Smithsonian Tropical Research Institute. We are also grateful to the NGEE-Tropics data team for assistance in obtaining, processing and gaining permission to use the data.  Data was quality assured and checked by Boris Faybishenko of Lawrence Berkeley National Laboratory.  The QA/QC process of the time series datasets included removing outliers, gap filling, and time series aggregation of non equal time steps to create equally spaced time intervals for all variables. </acknowledgements>
  <history> Data formatted by Ryan Knox (rgknox@lbl.gov), Mon Aug 20 12:15:59 PDT 2018</history>
  <constant>
    <name> ZBOT </name>
    <long_name> observational height </long_name>
    <units> m </units>
    <mode> time-invariant </mode>
    <dims> 2 </dims>
    <value> 30.0 </value>
  </constant>
  <constant>
    <name> LONGXY </name>
    <long_name> longitude </long_name>
    <units> degrees_east </units>
    <mode> time-invariant </mode>
    <dims> 2 </dims>
    <value> 280.0254  </value>
  </constant>
  <constant>
    <name> LATIXY </name>
    <long_name>  latitude</long_name>
    <units> degrees_north </units>
    <mode> time-invariant </mode>
    <value> 9.281031 </value>
    <dims> 2 </dims>
  </constant>
  <constant>
    <name> EDGEE </name>
    <long_name> eastern edge in atmospheric data </long_name>
    <units> degrees_east </units>
    <mode> time-invariant </mode>
    <value> 280.1254 </value>
    <dims> 1 </dims>
  </constant>
  <constant>
    <name> EDGEW </name>
    <long_name> western edge in atmospheric data </long_name>
    <units> degrees_east </units>
    <mode> time-invariant </mode>
    <value> 279.9254 </value>
    <dims> 1 </dims>
  </constant>
  <constant>
    <name> EDGES </name>
    <long_name> southern edge in atmospheric data </long_name>
    <units> degrees_north </units>
    <mode> time-invariant </mode>
    <value> 9.18103 </value>
    <dims> 1 </dims>
  </constant>
  <constant>
    <name> EDGEN </name>
    <long_name> northern edge in atmospheric data </long_name>
    <units> degrees_north </units>
    <mode> time-invariant </mode>
    <value> 9.38103 </value>
    <dims> 1 </dims>
  </constant>
  <variable>
    <name> PRECTmms </name>
    <long_name> precipitation </long_name>
    <units> mm/s </units>
    <mode> time-dependent </mode>
    <col_id> 12 </col_id>
    <unit_mult> 0.01666666 </unit_mult> <!-- mm/min - mm/s -->
    <unit_off> 0.0 </unit_off>
  </variable>
  <variable>
    <name> FSDS </name>
    <long_name> incident solar radiation </long_name>
    <units> W/m2 </units>
    <mode> time-dependent </mode>
    <col_id> 8 </col_id>
    <unit_mult> 1.0 </unit_mult> <!-- w/m2 - w/m2 -->
    <unit_off> 0.0 </unit_off>
  </variable>
  <variable>
    <name> QBOT </name>
    <long_name> specific humidity at the tower </long_name>
    <units> kg/kg </units>
    <mode> time-dependent </mode>
    <col_id> 10,6,6 </col_id>                     <!-- for unit_mult=-1, ids for RH,P,T                      -->
    <unit_mult> 1.0, 0.0, 1.0 </unit_mult>        <!-- RH must be in %, P is kPa, T is K                     -->
    <unit_off> -1, 99.15, 273.14  </unit_off>     <!-- special flags for RH->SH (uses converted P,T and %RH) -->
  </variable>  
  <variable>
    <name> PSRF </name>
    <long_name> surface pressure at the tower </long_name>
    <units> Pa </units>
    <mode> time-dependent </mode>
    <col_id> 6 </col_id>
    <unit_mult> 0.0 </unit_mult> <!--mmHg - Pa -->
    <unit_off> 99150.0 </unit_off>
  </variable>
  <variable>
    <name> RH </name>
    <long_name> relative humidity at the tower </long_name>
    <units> % </units>
    <mode> time-dependent </mode>
    <col_id> 10 </col_id>       
    <unit_mult> 1.0 </unit_mult>
    <unit_off> 0.0  </unit_off>
  </variable>
  <variable>
    <name> TBOT </name>
    <long_name> temperature at the tower </long_name>
    <units> K </units>
    <mode> time-dependent </mode>
    <col_id> 6 </col_id>
    <unit_off> 273.14 </unit_off> <!-- C - K-->
    <unit_mult> 1.0 </unit_mult>
  </variable>
  <variable>
    <name> WIND </name>
    <long_name> wind at the lowest atm level </long_name>
    <units> m/s </units>
    <mode> time-dependent </mode>
    <col_id> 14 </col_id>
    <unit_mult> 0.2777777777777778 </unit_mult> <!-- km/hr - m/s -->
    <unit_off> 0.0 </unit_off>
  </variable>
</all>
